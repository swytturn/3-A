        function buscarDados() {
            let nome = document.getElementById("nome").value.trim().toUpperCase();
            let resultadoDiv = document.getElementById("resultado");

            if (alunos[nome]) {
                resultadoDiv.innerHTML = `
                    <div class="alert alert-success">
                        <p><b>MatrÃ­cula:</b> ${alunos[nome].matricula}</p>
                        <p><b>E-mail institucional:</b> ${alunos[nome].email}</p>
                        <p><b>Senha:</b> Bezerra2023</p>
                    </div>`;
            } else {
                resultadoDiv.innerHTML = `<div class="alert alert-danger">Nome nÃ£o encontrado!</div>`;
            }
        }
